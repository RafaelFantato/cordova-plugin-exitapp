<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="https://cordova.apache.org/ns/plugins/1.0"
        id="kr.co.joycorp.cordova.exitapp"
        version="1.1.0">

  <name>ExitApp</name>
  <description>Implements navigator.app.exitApp on Android and iOS</description>
  <license>Apache 2.0</license>
  <keywords>cordova,exit,terminate</keywords>

  <js-module src="www/ExitApp.js" name="exitApp">
    <merges target="navigator.app" />
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="config.xml" parent="/*">
      <feature name="ExitApp">
        <param name="android-package" value="kr.co.joycorp.cordova.exitapp.ExitApp" />
      </feature>
    </config-file>
    <source-file src="src/android/ExitApp.java" target-dir="src/kr/co/joycorp/cordova/exitapp" />
  </platform>

  <!-- ios -->
  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="ExitApp">
        <param name="ios-package" value="ExitApp" />
      </feature>
    </config-file>
    <header-file src="src/ios/ExitApp.h" />
    <source-file src="src/ios/ExitApp.m" />
  </platform>

</plugin>
